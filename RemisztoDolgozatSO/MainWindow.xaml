<Window x:Class="RemisztoDolgozatSO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemisztoDolgozatSO"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        FontSize="20"
        Title="MainWindow" Height="400" Width="500">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
            <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Text="Név"
                   Margin="5"></TextBlock>
        <TextBox x:Name="nev"
                 Grid.Row="0"
                 Grid.Column="1"></TextBox>
        <TextBlock Grid.Column="0"
                   Grid.Row="1"
                   Text="Születési dátum"
                   Margin="5"></TextBlock>
        <TextBox x:Name="szuldatum"
                 Grid.Row="1"
                 Grid.Column="1"></TextBox>
        <TextBlock Grid.Column="0"
                   Grid.Row="2"
                   Text="Telefonszám"
                   Margin="5"></TextBlock>
        <TextBox x:Name="telefonszam"
                 Grid.Row="2"
                 Grid.Column="1"></TextBox>
        <TextBlock Grid.Column="0"
                   Grid.Row="3"
                   Text="E-mail"
                   Margin="5"></TextBlock>
        <TextBox x:Name="email"
                 Grid.Row="3"
                 Grid.Column="1"></TextBox>
        <Button x:Name="saveBtn"
                Grid.Row="4"
                Grid.Column="1"
                Content="Mentés"
                Background="Green"
                Foreground="White"
                Click="saveBtn_Click"></Button>
        <Button x:Name="colors"
                Grid.Column="1"
                Grid.Row="5"
                Content="Színek"
                Background="Blue"
                Foreground="White"
                Click="colors_Click"></Button>
        <Button x:Name="exit"
                Grid.Column="0"
                Grid.Row="5"
                Content="Kilépés"
                Background="Red"
                Foreground="White"
                Click="exit_Click"></Button>
    </Grid>
</Window>
