<Window x:Class="RemisztoDolgozatSO.NameCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemisztoDolgozatSO"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="NévjegyKártya" Height="200" Width="300" Background="LightGreen">
    <StackPanel>
        <TextBlock FontSize="30" x:Name="cardName" FontFamily="Segoe Script" Margin="10"></TextBlock>
        <TextBlock FontSize="14" Margin="5" Background="Black" Foreground="White" x:Name="cardBirthDate"></TextBlock>
        <TextBlock FontSize="14" FontStyle="Italic" Margin="5" x:Name="cardPhoneNumber"></TextBlock>
        <TextBlock FontSize="14" TextAlignment="Right" Margin="5" FontWeight="ExtraBold" x:Name="cardEmail"></TextBlock>
    </StackPanel>
</Window>
